<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Article" table="article">
    <indexes>
      <index name="fk_user_cat_idx" columns="category_id"/>
      <index name="fk_article_user1_idx" columns="user_id"/>
      <index name="fk_article_media1_idx" columns="media_id"/>
    </indexes>
    <id name="id" type="integer" column="id"/>
    <id name="user" association-key="true"/>
    <id name="category" association-key="true"/>
    <field name="title" type="string" column="title" length="255" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="content" type="text" column="content" length="65535" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="author" type="string" column="author" length="255" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="dateCreation" type="datetime" column="date_creation" nullable="false"/>
    <one-to-one field="category" target-entity="Category" fetch="LAZY">
      <join-columns>
        <join-column name="category_id" referenced-column-name="id"/>
      </join-columns>
    </one-to-one>
    <one-to-one field="user" target-entity="User" fetch="LAZY">
      <join-columns>
        <join-column name="user_id" referenced-column-name="id"/>
      </join-columns>
    </one-to-one>
    <many-to-one field="media" target-entity="Media" fetch="LAZY">
      <join-columns>
        <join-column name="media_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
