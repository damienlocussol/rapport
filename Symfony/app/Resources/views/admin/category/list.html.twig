
{% extends "base.html.twig" %}

{% block body_title %}
    <div class="page-title">
        <h1>{% trans %}Catégories{% endtrans %}</h1>
    </div>
{% endblock body_title %}

{% block body_content %}

<div class="portlet box white bordered">
    <div class="portlet-body">
        <div class="table-scrollable">
            <table class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th> Nom de la catégorie <a href="{{ path('admin_trash_category') }}" class="">voir la corbeille</a></th>
                        <th> &nbsp; </th>
                    </tr>
                </thead>
                <tbody>
                    {% for category in listCategories%}
                        {% if  not category.isTrashed %}
                            <tr>
                                <td><a href="{{ path('admin_edit_category', {'id' : category.id}) }}" class="">{{ category.name }}</a></td>
                                <td><a href="{{ path('admin_trashed_category', {'id' : category.id}) }}" class="">corbeille</a></td>
                            </tr>
                        {% endif %}
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
    
    
{% endblock %}


