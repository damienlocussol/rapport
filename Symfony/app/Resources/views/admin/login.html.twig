
{% extends "base.html.twig" %}

    {% block head_stylesheets %}
        {{ parent() }}
        <link href="{{ asset("theme/metropix/pages/css/login.min.css") }}" rel="stylesheet" type="text/css" />
    {% endblock head_stylesheets %}
    
    {% block body_class %}login{% endblock body_class %}

    {% block header %}{% endblock %}
    
    {% block page %}
        <!-- BEGIN LOGIN -->
        <div class="content">
            <!-- BEGIN LOGIN FORM -->
            <form class="login-form" action="{{ path('admin_login') }}" method="post">
                <h3 class="form-title font-green">Sign In</h3>
                <div class="alert alert-danger {% if error == false %}display-hide{% endif %} ">
                    <button class="close" data-close="alert"></button>
                    <span> Enter any username and password. </span>
                </div>
                <div class="form-group">
                    <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                    <label class="control-label visible-ie8 visible-ie9">Username</label>
                    <input class="form-control form-control-solid placeholder-no-fix" type="text" autocomplete="off" placeholder="Username" name="_username" /> 
                </div>
                <div class="form-group">
                    <label class="control-label visible-ie8 visible-ie9">Password</label>
                    <input class="form-control form-control-solid placeholder-no-fix" type="password" autocomplete="off" placeholder="Password" name="_password" /> 
                </div>
                <div class="form-actions">
                    <button type="submit" class="btn green uppercase">Login</button>
                    <input type="hidden" name="_target_path" value="/admin" />
                </div>
            </form>
            <!-- END LOGIN FORM -->
        </div>
    {% endblock page %}
    
    {% block footer %}{% endblock footer %}
    
    {% block javascripts_footer %}{% endblock javascripts_footer %}
